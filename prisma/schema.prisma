// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Domain {
  id     Int        @id @default(autoincrement())
  domain String     @unique
  visits VistInfo[]
}

model VistInfo {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  lat       Float
  lng       Float
  ip        String
  city      String
  region    String
  country   String
  org       String
  postal    String
  timezone  String
  domain    Domain   @relation(fields: [domainId], references: [id])
  domainId  Int
}

model Contact {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  email     String
  subject   String
  message   String
}
